<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_light_bule"
    android:orientation="vertical">

    <android.support.design.widget.TabLayout
        android:id="@+id/tab_main_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:fillViewport="false"
        app:tabGravity="fill"
        app:tabIndicatorColor="@color/colorAccent"
        app:tabMode="fixed" />

    <View style="@style/VerticalDivider" />

    <com.ltg263.happy_dzh.view.ItemSearchHead
        android:id="@+id/ish_head_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/iwork_light_bule"
        app:setSearch="asdfas" />

    <View style="@style/VerticalDivider" />

    <com.ltg263.happy_dzh.view.SlidingViewPager
        android:id="@+id/vp_main_1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white" />
</LinearLayout>
